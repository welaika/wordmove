  vhost: "http://vhost.local"
  wordpress_path: "~/dev/sites/your_site"
  database:
    name: "database_name"
    user: "user"
    password: "password"
    host: "127.0.0.1"
staging:
  vhost: "http://remote.com"
  wordpress_path: "/var/www/your_site"
  exclude:
    - ".sass-cache"
    - ".git"
    - "tmp/*"
    - "wp-content/*.sql"
  database:
    name: "database_name"
    user: "user"
    password: "password"
    host: "host"
